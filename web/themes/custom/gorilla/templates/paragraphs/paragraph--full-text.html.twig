{%
set classes = [

'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
not paragraph.isPublished() ? 'paragraph--unpublished',
'image-description-paragraph'
]
%}

{% block paragraph %}
  {% set color = content.field_color_identity[0] %}
  {% set text_full = content.field_rich_text[0] %}
<section class="full-text full-text--{{color}} p-0 test" {{ attributes.addClass(classes) }}>
  <div class="container">
    <div class="row g-0 full-text-container">
    {{ text_full}}
  </div>
  </div>
</section>
{% endblock paragraph %}
